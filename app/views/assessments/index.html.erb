<p id="notice"><%= notice %></p>

<h1>Listing Assessments</h1>

<table>
  <thead>
    <tr>
      <th>Weight</th>
      <th>Situps</th>
      <th>Pushups</th>
      <th>Heartrate</th>
      <th>Bodyfat</th>
      <th>Client ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assessments.each do |assessment| %>
      <tr>
        <td><%= assessment.weight %></td>
        <td><%= assessment.situps %></td>
        <td><%= assessment.pushups %></td>
        <td><%= assessment.heartrate %></td>
        <td><%= assessment.bodyfat %></td>
        <td><%= assessment.client_id %></td>
        <td><%= link_to 'Show', assessment %></td>
        <td><%= link_to 'Edit', edit_assessment_path(assessment) %></td>
        <td><%= link_to 'Destroy', assessment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

