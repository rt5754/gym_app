<p id="notice"><%= notice %></p>
<div class="heading">
  <h1 align="center">Listing Clients</h1>
</div>
<div class="col-md-12" style="padding-bottom: 20px">
 <%= form_tag(clients_path, method: :get) do %>
  <div class="col-md-6 col-md-offset-4">
    <div class="input-group col-md-8">
      <%= text_field_tag :search_request, params[:search_request], class: "form-control", placeholder: "Search clients" %>
      <span class="input-group-btn">
        <%= submit_tag 'Search',name: nil, class: "btn btn-default"%>
      </span>
        <% end %>
    </div>
  </div>
</div>
  

  <div class="row">
    <div class="col-md-12">
      
      <% @clients.each do |client| %>
          <div class="col-md-6">
            <div class="well well-sm client-preview">
              <% names = client.name + ' ' + client.surname %>
             
              <h2><%= link_to names, client_path(client), class: "client-name" %></h2>
              <h4><%= pluralize(client.assessments.count, "assessment")  %></h4>
              <small>
                <%= "Last assessment: " + time_ago_in_words(client.assessments.last.created_at) + " ago" if client.assessments.any?  %>
              </small>
            </div>
          </div>
      <% end %>
    </div>
    
  </div>


