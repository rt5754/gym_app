  <%= render 'shared/errors', obj: @client %>
  
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@client, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :name %>
          </div>
          <div class="col-md-8">
            <%= f.text_field :name, class: "form-control", placeholder: "Client name", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :surname %>
          </div>
          <div class="col-md-8">
            <%= f.text_field :surname, class: "form-control", placeholder: "Client surname" %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :phone_number %>
          </div>
          <div class="col-md-8">
            <%= f.text_field :phone_number, class: "form-control", placeholder: "eg. 0713344309" %>
          </div>
        </div>
          <div class="form-group">
            <div class="col-md-offset-2 col-md-8">
              <%= f.submit class: 'btn btn-primary btn-lg full-btn' %>
            </div>
          </div>
          
        </div>
      </div>
  <% end %>
